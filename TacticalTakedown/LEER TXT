// TXT.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include <iostream>
#include "fstream"
#include "string"

#define ESCALA 5 //escala de texturas
#define  MAX 128
int main()
{
	char cadena[MAX];
	int const MAX_COL=6;
	int const MAX_FIL=6;
	std::ifstream fe("Nivel1.txt");
	
	int j = 0;
	int k =0 ;
	while (!fe.eof()) {
		fe >> cadena;
		int MATRIZ[MAX_COL][MAX_FIL];
		for (int i = 0; i < MAX; i++) {
			if ((cadena[i] >= '0') && (cadena[i] <= '9'))
			{
					MATRIZ[j][k] = cadena[i]-48;
					std::cout << MATRIZ[j][k] << std::endl;
			}
			else if (cadena[i] == ',')
				j++;
			else if (cadena[i] == ';')
				k++;
		}
	}
	fe.close();

}

// Ejecutar programa: Ctrl + F5 o menú Depurar > Iniciar sin depurar
// Depurar programa: F5 o menú Depurar > Iniciar depuración

